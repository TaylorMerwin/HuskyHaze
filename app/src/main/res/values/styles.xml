    <style name="HuskyHaze" parent="AppTheme">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="Homepage" parent="AppTheme">
        <item name="android:background">?attr/background</item>
    </style>
    <style name="HomepageGreeting" parent="AppTheme">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">?attr/colorOutline</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1.3</item>
        <item name="android:text">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">28sp</item>
    </style>
    <style name="HomepageGreetingInfo" parent="AppTheme">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">?attr/colorOutline</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1.3</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@null</item>
    </style>
    <style name="Settings" parent="AppTheme">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>
    <style name="ContainedTextPrimary" parent="AppTheme">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@drawable/rounded_rectangle_primary</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>
    <style name="ContainedTextSecondary" parent="AppTheme">
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
        <item name="android:background">@drawable/rounded_rectangle_secondary</item>
        <item name="android:backgroundTint">?attr/colorSecondaryContainer</item>
    </style>
    <style name="ContainedTextTertiary" parent="AppTheme">
        <item name="android:textColor">?attr/colorOnTertiaryContainer</item>
        <item name="android:background">@drawable/rounded_rectangle_secondary</item>
        <item name="android:backgroundTint">?attr/colorTertiaryContainer</item>
    </style>
    <style name="SurfacePrimary" parent="AppTheme">
        <item name="android:background">?attr/colorSurface</item>
    </style>
    <style name="ContainerPrimary" parent="AppTheme">
        <item name="android:background">@drawable/rounded_rectangle_primary</item>
        <item name="android:backgroundTint">?attr/colorSurfaceContainerHighest</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>